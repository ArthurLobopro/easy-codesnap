{
  "name": "easy-codesnap",
  "displayName": "Easy CodeSnap",
  "description": "Extension to take beautiful custom screenshots of your code ðŸ“·",
  "version": "1.34.4",
  "l10n": "./l10n",
  "repository": {
    "type": "git",
    "url": "https://github.com/ArthurLobopro/easy-codesnap"
  },
  "sponsor": {
    "url": "https://buymeacoffee.com/arthurlobo"
  },
  "license": "MIT",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.99.0"
  },
  "publisher": "ArthurLobo",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "easy-codesnap.snap",
        "title": "%commands.snap.title%"
      },
      {
        "command": "easy-codesnap.openSettings",
        "title": "%commands.openSettings.title%"
      },
      {
        "command": "easy-codesnap.importSettings",
        "title": "%commands.importSettings.title%"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "easy-codesnap.snap",
          "when": "editorHasSelection && !editorHasMultipleSelections"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Easy CodeSnap",
      "properties": {
        "easy-codesnap.lockOnOpen": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "markdownDescription": "%easy-codesnap.lockOnOpen%",
          "order": 1
        },
        "easy-codesnap.linkOnOpen": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "markdownDescription": "%easy-codesnap.linkOnOpen%",
          "order": 2
        },
        "easy-codesnap.shutterAction": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "copy",
            "save"
          ],
          "default": "copy",
          "markdownDescription": "%easy-codesnap.shutterAction%",
          "markdownEnumDescriptions": [
            "%easy-codesnap.shutterAction.copy%",
            "%easy-codesnap.shutterAction.save%"
          ],
          "order": 3
        },
        "easy-codesnap.saveFormat": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "png",
            "svg"
          ],
          "default": "png",
          "markdownDescription": "%easy-codesnap.saveFormat%",
          "markdownEnumDescriptions": [
            "%easy-codesnap.saveFormat.png%",
            "%easy-codesnap.saveFormat.svg%"
          ],
          "order": 4
        },
        "easy-codesnap.saveScale": {
          "scope": "resource",
          "type": "number",
          "enum": [
            0.5,
            0.75,
            1,
            1.5,
            2,
            3,
            4
          ],
          "default": 1,
          "markdownDescription": "%easy-codesnap.saveScale%",
          "markdownEnumDescriptions": [
            "%easy-codesnap.saveScale.0.5%",
            "%easy-codesnap.saveScale.0.75%",
            "%easy-codesnap.saveScale.1%",
            "%easy-codesnap.saveScale.1.5%",
            "%easy-codesnap.saveScale.2%",
            "%easy-codesnap.saveScale.3%",
            "%easy-codesnap.saveScale.4%"
          ],
          "order": 5
        },
        "easy-codesnap.optimizeSvg": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "markdownDescription": "%easy-codesnap.optimizeSvg%",
          "order": 6
        },
        "easy-codesnap.useFallbackPngExporter": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "markdownDescription": "%easy-codesnap.useFallbackPngExporter%",
          "order": 7
        },
        "easy-codesnap.showLineNumbers": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "markdownDescription": "%easy-codesnap.showLineNumbers%",
          "order": 8
        },
        "easy-codesnap.realLineNumbers": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "markdownDescription": "%easy-codesnap.realLineNumbers%",
          "order": 9
        },
        "easy-codesnap.highlightLineNumber": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "markdownDescription": "%easy-codesnap.highlightLineNumber%",
          "order": 10
        },
        "easy-codesnap.fullLinesSelection": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "markdownDescription": "%easy-codesnap.fullLinesSelection%",
          "order": 11
        },
        "easy-codesnap.windowStyle": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "macos",
            "windows"
          ],
          "default": "macos",
          "markdownDescription": "%easy-codesnap.windowStyle%",
          "markdownEnumDescriptions": [
            "%easy-codesnap.windowStyle.macos%",
            "%easy-codesnap.windowStyle.windows%"
          ],
          "order": 12
        },
        "easy-codesnap.windowIconType": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "round",
            "square"
          ],
          "default": "round",
          "markdownDescription": "%easy-codesnap.windowIconType%",
          "markdownEnumDescriptions": [
            "%easy-codesnap.windowIconType.round%",
            "%easy-codesnap.windowIconType.square%"
          ],
          "order": 13
        },
        "easy-codesnap.showWindowTitle": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "markdownDescription": "%easy-codesnap.showWindowTitle%",
          "order": 14
        },
        "easy-codesnap.windowTitleTemplate": {
          "scope": "resource",
          "type": "string",
          "minLength": 1,
          "default": "{workspace} - {fileName}",
          "markdownDescription": "%easy-codesnap.windowTitleTemplate%",
          "order": 15
        },
        "easy-codesnap.showWindowControls": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "markdownDescription": "%easy-codesnap.showWindowControls%",
          "order": 16
        },
        "easy-codesnap.roundedCorners": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "markdownDescription": "%easy-codesnap.roundedCorners%",
          "order": 17
        },
        "easy-codesnap.roundingLevel": {
          "scope": "resource",
          "type": "number",
          "enum": [
            1,
            2,
            3,
            4
          ],
          "default": 1,
          "markdownDescription": "%easy-codesnap.roundingLevel%",
          "markdownEnumDescriptions": [
            "%easy-codesnap.roundingLevel.1%",
            "%easy-codesnap.roundingLevel.2%",
            "%easy-codesnap.roundingLevel.3%",
            "%easy-codesnap.roundingLevel.4%"
          ],
          "order": 18
        },
        "easy-codesnap.target": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "container",
            "window"
          ],
          "default": "container",
          "markdownDescription": "%easy-codesnap.target%",
          "markdownEnumDescriptions": [
            "%easy-codesnap.target.container%",
            "%easy-codesnap.target.window%"
          ],
          "order": 19
        },
        "easy-codesnap.boxShadow": {
          "scope": "resource",
          "type": "string",
          "default": "rgba(0, 0, 0, 0.55) 0px 20px 68px",
          "markdownDescription": "%easy-codesnap.boxShadow%",
          "order": 20
        },
        "easy-codesnap.backgroundColor": {
          "scope": "resource",
          "type": "string",
          "default": "#abb8c3",
          "markdownDescription": "%easy-codesnap.backgroundColor%",
          "order": 21
        },
        "easy-codesnap.containerPadding": {
          "scope": "resource",
          "type": "string",
          "default": "3em",
          "markdownDescription": "%easy-codesnap.containerPadding%",
          "order": 22
        },
        "easy-codesnap.transparentBackground": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "markdownDescription": "%easy-codesnap.transparentBackground%",
          "order": 23
        },
        "easy-codesnap.enableResizing": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "markdownDescription": "%easy-codesnap.enableResizing%",
          "order": 24
        },
        "easy-codesnap.enableSymbolBreadcrumb": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "markdownDescription": "%easy-codesnap.enableSymbolBreadcrumb%",
          "order": 25
        },
        "easy-codesnap.maxCharWidth": {
          "scope": "resource",
          "type": "integer",
          "minimum": 0,
          "maximum": 200,
          "default": 0,
          "markdownDescription": "%easy-codesnap.maxCharWidth%",
          "order": 26
        },
        "easy-codesnap.aspect-ratio": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "none",
            "1:1",
            "4:5",
            "9:16",
            "16:9",
            "1.91:1"
          ],
          "default": "none",
          "markdownDescription": "%easy-codesnap.aspect-ratio%",
          "markdownEnumDescriptions": [
            "%easy-codesnap.aspect-ratio.none%",
            "%easy-codesnap.aspect-ratio.1:1%",
            "%easy-codesnap.aspect-ratio.4:5%",
            "%easy-codesnap.aspect-ratio.9:16%",
            "%easy-codesnap.aspect-ratio.16:9%",
            "%easy-codesnap.aspect-ratio.1.91:1%"
          ],
          "order": 27
        },
        "easy-codesnap.watermark": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "markdownDescription": "%easy-codesnap.watermark%",
          "order": 28
        },
        "easy-codesnap.defaultWatermarkText": {
          "scope": "resource",
          "type": "string",
          "default": "Made with Easy CodeSnap",
          "markdownDescription": "%easy-codesnap.defaultWatermarkText%",
          "order": 29
        },
        "easy-codesnap.watermarkPosition": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "top-left",
            "top-right",
            "bottom-left",
            "bottom-right"
          ],
          "default": "bottom-right",
          "markdownDescription": "%easy-codesnap.watermarkPosition%",
          "markdownEnumDescriptions": [
            "%easy-codesnap.watermarkPosition.top-left%",
            "%easy-codesnap.watermarkPosition.top-right%",
            "%easy-codesnap.watermarkPosition.bottom-left%",
            "%easy-codesnap.watermarkPosition.bottom-right%"
          ],
          "order": 30
        },
        "easy-codesnap.uiCustomColors": {
          "scope": "resource",
          "type": "object",
          "default": {
            "watermarkPositionInputSelectedBackgroud": "var(--vscode-focusBorder)"
          },
          "markdownDescription": "%easy-codesnap.uiCustomColors%",
          "properties": {
            "watermarkPositionInputSelectedBackgroud": {
              "type": "string",
              "default": "var(--vscode-focusBorder)",
              "description": "%easy-codesnap.uiCustomColors.watermarkPositionInputSelectedBackgroud%"
            }
          },
          "order": 31
        }
      }
    }
  },
  "keywords": [
    "CodeSnap",
    "Screenshot",
    "Screenshot Tool",
    "Screenshot Extension",
    "Code Snapshot",
    "Polacode",
    "Code Screenshot",
    "snippet",
    "share",
    "carbon"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "package": "yarn build:css && webpack --mode production",
    "compile": "yarn run webpack",
    "watch": "yarn webpack-dev",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "translation-status": "tsx cli translation-status",
    "compress-json": "tsx cli compress-json",
    "make-badges": "tsx cli make-badges",
    "sort": "tsx cli sort order && tsx cli sort nls",
    "build:css": "tailwindcss -i ./webview/style.css -o ./webview/output.css -m"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@svgr/webpack": "^8.1.0",
    "@types/node": "18.x",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/vscode": "^1.99.0",
    "badge-maker": "^4.1.0",
    "commander": "^14.0.1",
    "esbuild-loader": "^4.4.0",
    "sharp": "^0.34.4",
    "tailwindcss": "^3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@arthur-lobo/object-pick": "^1.5.0",
    "@arthur-lobo/react-custom-tooltip": "^1.0.1",
    "@vscode/codicons": "^0.0.40",
    "@vscode/l10n": "^0.0.18",
    "dom-to-image-even-more": "^1.0.4",
    "dom-to-svg": "^0.12.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "svgo": "^4.0.0",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.8"
  }
}
