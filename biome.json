{
	"$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "useLiteralKeys": "off",
                "noForEach": "off"
            },
            "suspicious": {
                "noExplicitAny": "off"
            },
            "correctness": {
                "useExhaustiveDependencies": "off"
            }
        }
    },
	"formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    }
}
